---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout
  title="404"
  description="The page you're looking for doesn't exist. Let's get you back on track."
  noindex={true}
>
  <section class="min-h-screen flex items-center justify-center px-6 md:px-6 py-20">
    <div class="max-w-4xl mx-auto text-center">
      <!-- 404 Number -->
      <div class="mb-8 md:mb-12">
        <h1 class="error-number text-[120px] md:text-[200px] font-black text-primary uppercase tracking-tighter leading-none opacity-0" style="text-shadow: 4px 4px 0px #000000;">
          404
        </h1>
      </div>

      <!-- Error Message -->
      <div class="mb-8 md:mb-12">
        <p class="error-label text-xs md:text-sm font-bold tracking-widest text-primary uppercase mb-4 opacity-0">
          Error
        </p>
        <h2 class="error-heading text-3xl md:text-5xl font-black text-white uppercase tracking-tight mb-6 opacity-0">
          Page Not Found
        </h2>
        <div class="error-description border-l-4 border-primary pl-6 mb-8 inline-block text-left opacity-0">
          <p class="text-lg md:text-xl text-gray-light max-w-2xl">
            The page you're looking for doesn't exist or has been moved.
            Let's get you back to exploring.
          </p>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <!-- Home Button -->
        <div class="error-button relative group opacity-0">
          <div class="border-2 border-primary absolute inset-0 translate-x-2 translate-y-2 md:translate-x-3 md:translate-y-3 transition-transform group-hover:translate-x-1 group-hover:translate-y-1"></div>
          <a
            href="/"
            class="relative inline-flex items-center gap-3 px-8 md:px-10 py-4 bg-primary border-2 border-primary text-black hover:bg-black hover:text-primary transition-all font-bold uppercase text-xs md:text-sm tracking-widest"
          >
            <Icon name="carbon:home" class="w-4 h-4 md:w-5 md:h-5" />
            Go Home
          </a>
        </div>

        <!-- Projects Button -->
        <div class="error-button relative group opacity-0">
          <div class="border-2 border-primary absolute inset-0 translate-x-2 translate-y-2 md:translate-x-3 md:translate-y-3 transition-transform group-hover:translate-x-1 group-hover:translate-y-1"></div>
          <a
            href="/projects"
            class="relative inline-flex items-center gap-3 px-8 md:px-10 py-4 bg-black border-2 border-primary text-primary hover:bg-primary hover:text-black transition-all font-bold uppercase text-xs md:text-sm tracking-widest"
          >
            <Icon name="carbon:folder" class="w-4 h-4 md:w-5 md:h-5" />
            View Projects
          </a>
        </div>
      </div>

      <!-- Decorative Elements -->
      <div class="mt-16 md:mt-24 flex justify-center gap-4">
        <div class="error-decoration w-12 h-12 md:w-16 md:h-16 border-4 border-primary opacity-0"></div>
        <div class="error-decoration w-12 h-12 md:w-16 md:h-16 border-4 border-primary bg-primary opacity-0"></div>
        <div class="error-decoration w-12 h-12 md:w-16 md:h-16 border-4 border-primary opacity-0"></div>
      </div>
    </div>
  </section>
</Layout>

<script src="../scripts/404.ts"></script>

<style>
  /* Additional glitch animation for 404 number */
  .error-number {
    animation: glitch 3s ease-in-out infinite;
  }

  @keyframes glitch {
    0%, 96%, 100% {
      transform: translateX(0);
    }
    97% {
      transform: translateX(-2px);
    }
    98% {
      transform: translateX(2px);
    }
    99% {
      transform: translateX(-2px);
    }
  }
</style>
