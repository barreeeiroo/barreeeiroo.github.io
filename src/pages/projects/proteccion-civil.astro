---
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import featuredImage from '../../assets/featured/proteccion-civil.png';

const title = "Protección Civil Platform";
const description = "A comprehensive digital transformation solution for civil defense operations in Santiago de Compostela, replacing decades-old paper-based workflows with modern web-based systems.";
---

<ProjectLayout title={title} description={description}>
  <!-- Project Info Section -->
  <section class="section-animate px-6 md:px-12 pb-16 md:pb-24">
    <div class="max-w-6xl mx-auto">
      <!-- Role & Links -->
      <div class="section-content mb-12">
        <div class="inline-block border-2 border-primary px-4 py-2 mb-6">
          <p class="text-primary font-bold uppercase tracking-wider text-sm">
            Volunteer & Developer
          </p>
        </div>

        <div class="flex gap-6 flex-wrap">
          <a
            href="https://proteccioncivil.sdc.gal/"
            class="inline-flex items-center gap-2 text-gray-light hover:text-primary transition-colors text-sm uppercase tracking-wider"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name="carbon:launch" class="w-5 h-5" />
            Visit Site
          </a>
          <a
            href="https://github.com/PC-Compostela"
            class="inline-flex items-center gap-2 text-gray-light hover:text-primary transition-colors text-sm uppercase tracking-wider"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name="carbon:logo-github" class="w-5 h-5" />
            GitHub
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="section-animate py-16 md:py-24 px-6 md:px-12 bg-navy/50">
    <div class="max-w-6xl mx-auto">
      <h2 class="section-heading text-xs md:text-sm font-bold tracking-widest text-primary uppercase mb-12">
        Impact & Reach
      </h2>

      <div class="section-content grid grid-cols-1 lg:grid-cols-[1fr_2fr] gap-12 items-start">
        <!-- Stats - Left Side -->
        <div class="space-y-8">
          <!-- Stat 1 -->
          <div class="stat-item border-l-4 border-primary pl-6 transition-all duration-300 hover:pl-8 hover:border-l-8">
            <div class="stat-number text-5xl md:text-6xl font-bold text-white mb-2 transition-transform duration-300">350+</div>
            <div class="text-gray-light uppercase tracking-wider text-sm">Total Volunteers</div>
            <div class="text-gray-light/60 text-xs mt-1">Using The Platform</div>
          </div>

          <!-- Stat 2 -->
          <div class="stat-item border-l-4 border-primary pl-6 transition-all duration-300 hover:pl-8 hover:border-l-8">
            <div class="stat-number text-5xl md:text-6xl font-bold text-white mb-2 transition-transform duration-300">7,000+</div>
            <div class="text-gray-light uppercase tracking-wider text-sm">Operations Managed</div>
            <div class="text-gray-light/60 text-xs mt-1">Since Launch</div>
          </div>

          <!-- Stat 3 -->
          <div class="stat-item border-l-4 border-primary pl-6 transition-all duration-300 hover:pl-8 hover:border-l-8">
            <div class="stat-number text-5xl md:text-6xl font-bold text-white mb-2 transition-transform duration-300">90K+</div>
            <div class="text-gray-light uppercase tracking-wider text-sm">Operation Hours</div>
            <div class="text-gray-light/60 text-xs mt-1">By Volunteers</div>
          </div>

          <!-- Stat 4 -->
          <div class="stat-item border-l-4 border-primary pl-6 transition-all duration-300 hover:pl-8 hover:border-l-8">
            <div class="stat-number text-5xl md:text-6xl font-bold text-white mb-2 transition-transform duration-300">210K+</div>
            <div class="text-gray-light uppercase tracking-wider text-sm">Kilometers Traveled</div>
            <div class="text-gray-light/60 text-xs mt-1">By Fleet Vehicles</div>
          </div>
        </div>

        <!-- Platform Screenshot - Right Side (Larger) -->
        <div class="relative group">
          <div class="border-2 border-primary absolute inset-0 translate-x-3 translate-y-3 transition-transform group-hover:translate-x-1 group-hover:translate-y-1"></div>
          <div class="relative overflow-hidden border-2 border-primary bg-black">
            <Image
              src={featuredImage}
              alt="Protección Civil Platform Interface"
              class="w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-300"
              quality={90}
              loading="eager"
              fetchpriority="high"
            />
            <div class="absolute inset-0 bg-primary/20 group-hover:bg-transparent transition-all"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Features Section -->
  <section class="section-animate py-16 md:py-24 px-6 md:px-12">
    <div class="max-w-6xl mx-auto">
      <h2 class="section-heading text-xs md:text-sm font-bold tracking-widest text-primary uppercase mb-12">
        Key Features
      </h2>

      <div class="section-content">
        <!-- Description -->
        <div class="border-l-4 border-primary pl-6 mb-12">
          <p class="text-gray-light text-lg leading-relaxed mb-4">
            This dual-platform system revolutionized civil defense operations in Santiago de Compostela by completely replacing decades-old paper-based workflows with an intuitive, modern web-based solution.
          </p>
          <p class="text-gray-light text-lg leading-relaxed">
            The platform consists of an internal resource management tool for coordinating volunteers and equipment, and a public-facing website that enhances the organization's digital presence and community engagement.
          </p>
        </div>

        <!-- Features Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Internal Platform Features -->
        <div>
          <h3 class="text-xl font-bold text-white mb-6 uppercase tracking-wider border-b-2 border-primary pb-3">
            Internal Management Platform
          </h3>
          <ul class="space-y-3 text-gray-light">
            <li class="flex items-start gap-3">
              <span class="text-primary text-lg">→</span>
              <span>Real-time resource tracking and inventory management</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary text-lg">→</span>
              <span>Volunteer coordination and scheduling system</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary text-lg">→</span>
              <span>Emergency response workflow automation</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary text-lg">→</span>
              <span>Equipment maintenance logging and alerts</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary text-lg">→</span>
              <span>Document management and digital archival</span>
            </li>
          </ul>
        </div>

        <!-- Public Website Features -->
        <div>
          <h3 class="text-xl font-bold text-white mb-6 uppercase tracking-wider border-b-2 border-primary pb-3">
            Public Website
          </h3>
          <ul class="space-y-3 text-gray-light">
            <li class="flex items-start gap-3">
              <span class="text-primary text-lg">→</span>
              <span>Modern, responsive web design</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary text-lg">→</span>
              <span>Community safety information and resources</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary text-lg">→</span>
              <span>News and updates about civil defense activities</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary text-lg">→</span>
              <span>Volunteer recruitment and contact forms</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary text-lg">→</span>
              <span>Enhanced digital presence for the organization</span>
            </li>
          </ul>
        </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tech Stack Section -->
  <section class="section-animate py-16 md:py-24 px-6 md:px-12 bg-navy/50">
    <div class="max-w-6xl mx-auto">
      <h2 class="section-heading text-xs md:text-sm font-bold tracking-widest text-primary uppercase mb-12">
        Technology Stack
      </h2>

      <div class="section-content grid grid-cols-1 md:grid-cols-2 gap-12 mb-12">
        <!-- Tech Stack -->
        <div>
          <h3 class="text-xl font-bold text-white mb-6 uppercase tracking-wider border-b-2 border-primary pb-3">
            Technologies
          </h3>
          <ul class="space-y-3 text-gray-light">
            <li class="flex items-start gap-3">
              <span class="text-primary">•</span>
              <span><strong class="text-white">Backend:</strong> Java, Spring Framework</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary">•</span>
              <span><strong class="text-white">Frontend:</strong> React, JavaScript</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary">•</span>
              <span><strong class="text-white">Database:</strong> MySQL</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-primary">•</span>
              <span><strong class="text-white">Infrastructure:</strong> Microsoft Azure</span>
            </li>
          </ul>
        </div>

        <!-- Key Capabilities -->
        <div>
          <h3 class="text-xl font-bold text-white mb-6 uppercase tracking-wider border-b-2 border-primary pb-3">
            Key Capabilities
          </h3>
          <div class="flex flex-wrap gap-3">
            <span class="border-2 border-primary px-4 py-2 text-primary font-bold text-sm uppercase tracking-wider">Operations Coordination</span>
            <span class="border-2 border-primary px-4 py-2 text-primary font-bold text-sm uppercase tracking-wider">Resource Management</span>
            <span class="border-2 border-primary px-4 py-2 text-primary font-bold text-sm uppercase tracking-wider">Planning & Logistics</span>
            <span class="border-2 border-primary px-4 py-2 text-primary font-bold text-sm uppercase tracking-wider">Training & Education</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Impact Section -->
  <section class="section-animate py-16 md:py-24 px-6 md:px-12">
    <div class="max-w-6xl mx-auto">
      <h2 class="section-heading text-xs md:text-sm font-bold tracking-widest text-primary uppercase mb-12">
        Impact & Legacy
      </h2>

      <div class="section-content">
        <div class="border-l-4 border-primary pl-6 space-y-6">
          <p class="text-gray-light text-lg leading-relaxed">
            What began as a volunteer project during my International Baccalaureate program has grown into critical infrastructure serving the local community in Santiago de Compostela.
          </p>
          <p class="text-gray-light text-lg leading-relaxed">
            The platform continues to be actively maintained and used daily by Protección Civil volunteers, proving that student-led initiatives can create lasting, meaningful impact when built with the right approach and dedication.
          </p>
          <p class="text-gray-light text-lg leading-relaxed">
            This project demonstrated how technology can modernize essential public services, making operations more efficient while maintaining the human-centered approach that defines civil defense work.
          </p>
        </div>
      </div>
    </div>
  </section>
</ProjectLayout>

<script>
  import { accessibleAnimate, getAnimationDelay } from '../../utils/motion';

  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      root: null,
      threshold: 0.1,
      rootMargin: '0px 0px 100px 0px'
    };

    const animatedSections = new Set<Element>();

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting && !animatedSections.has(entry.target)) {
          animatedSections.add(entry.target);
          animateSection(entry.target as HTMLElement);
        }
      });
    }, observerOptions);

    // Observe all sections
    const sections = document.querySelectorAll('.section-animate');
    sections.forEach((section) => {
      observer.observe(section);
    });

    function animateSection(section: HTMLElement) {
      // Animate section heading
      const heading = section.querySelector('.section-heading');
      if (heading) {
        accessibleAnimate(
          heading,
          { opacity: [0, 1], y: [-20, 0] },
          { duration: 0.6, easing: 'ease-out' }
        );
      }

      // Animate section content
      const content = section.querySelector('.section-content');
      if (content) {
        accessibleAnimate(
          content,
          { opacity: [0, 1], y: [20, 0] },
          { duration: 0.5, delay: getAnimationDelay(0.05), easing: 'ease-out' }
        );
      }
    }
  });
</script>

<style>
  /* Stat hover effects */
  .stat-item:hover .stat-number {
    transform: scale(1.05);
  }
</style>
