  <section class="section-animate py-16 md:py-24 px-6 md:px-12 bg-navy/50">
    <div class="max-w-6xl mx-auto">
      <h2 class="section-heading text-xs md:text-sm font-bold tracking-widest text-primary uppercase mb-12">
