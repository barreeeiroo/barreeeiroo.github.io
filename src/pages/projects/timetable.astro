            <div class="stat-number text-5xl md:text-6xl font-bold text-white mb-2 transition-transform duration-300">100%</div>
            <div class="text-gray-light uppercase tracking-wider text-sm">Serverless</div>
            <div class="text-gray-light/60 text-xs mt-1">AWS Architecture</div>
          </div>

          <!-- Stat 2 -->
          <div class="stat-item border-l-4 border-primary pl-6 transition-all duration-300 hover:pl-8 hover:border-l-8">
            <div class="stat-number text-5xl md:text-6xl font-bold text-white mb-2 transition-transform duration-300">ASP</div>
            <div class="text-gray-light uppercase tracking-wider text-sm">Constraint Solving</div>
            <div class="text-gray-light/60 text-xs mt-1">Answer-Set Programming</div>
          </div>

          <!-- Stat 3 -->
