---
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

// Project data
const title = "Kodular";
const description = "A comprehensive drag-and-drop platform that democratizes mobile app development, enabling anyone to build Android apps without writing a single line of code.";
const technologies = ["Java", "Python", "Android", "GCP"];
const githubUrl = "https://github.com/Kodular";
const externalUrl = "https://www.kodular.io/";
---

<ProjectLayout title={title} description={description}>
  <!-- Project Detail -->
  <section class="px-6 md:px-6 pb-16 md:pb-24">
    <div class="max-w-5xl mx-auto">
      <!-- Technologies -->
      <div class="mb-8">
        <div class="flex flex-wrap gap-3 mb-6">
          {technologies.map((tech) => (
            <span class="text-xs uppercase tracking-wider border-2 border-primary px-3 py-2 text-primary font-bold">
              {tech}
            </span>
          ))}
        </div>

        <!-- Links -->
        <div class="flex gap-4">
          <a
            href={githubUrl}
            class="inline-flex items-center gap-2 text-gray-light hover:text-primary transition-colors text-sm uppercase tracking-wider"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name="carbon:logo-github" class="w-5 h-5" />
            View on GitHub
          </a>
          <a
            href={externalUrl}
            class="inline-flex items-center gap-2 text-gray-light hover:text-primary transition-colors text-sm uppercase tracking-wider"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name="carbon:launch" class="w-5 h-5" />
            Live Demo
          </a>
        </div>
      </div>

      <!-- Project Content -->
      <div class="border-l-2 md:border-l-4 border-primary pl-6 md:pl-8 mb-12">
        <div class="prose prose-invert prose-lg max-w-none text-gray-light [&>p]:mb-6 [&>p]:leading-relaxed">
          <p>
            Content for Kodular project page will go here.
          </p>
        </div>
      </div>

      <!-- Navigation -->
      <div class="flex justify-between items-center pt-8 border-t-2 border-primary/20">
        <a
          href="/projects"
          class="inline-flex items-center gap-2 text-gray-light hover:text-primary transition-colors text-sm uppercase tracking-wider"
        >
          <Icon name="carbon:arrow-left" class="w-4 h-4" />
          All Projects
        </a>
        <a
          href="/"
          class="inline-flex items-center gap-2 text-gray-light hover:text-primary transition-colors text-sm uppercase tracking-wider"
        >
          Home
          <Icon name="carbon:arrow-right" class="w-4 h-4" />
        </a>
      </div>
    </div>
  </section>
</ProjectLayout>
